<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.FriendsActivity">

    <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_friends"
            android:layout_height="match_parent"
            android:layout_width="match_parent">

    </android.support.v7.widget.RecyclerView>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/error_no_friends"
            android:layout_gravity="center"/>

    <com.github.rahatarmanahmed.cpv.CircularProgressView
            android:id="@+id/progress_view_friends"
            android:layout_width="@dimen/progress_view_width"
            android:layout_height="@dimen/progress_view_height"
            android:layout_gravity="center"
            android:visibility="gone"
            app:cpv_color="@color/colorAuthorization"
            app:cpv_animAutostart="true"
            app:cpv_indeterminate="true"/>

</FrameLayout>